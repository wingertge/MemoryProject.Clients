<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    prism:ViewModelLocator.AutowireViewModel="True"
	xmlns:local="clr-namespace:MemoryClient.Mobile.Views;assembly=MemoryClient.Mobile"
    x:Class="MemoryClient.Mobile.Views.Login"
    Title="Login">



	  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
          <Label Text="Login" VerticalOptions="Center" HorizontalOptions="Center" />
		          <Button Text="Dashboard" Command="{Binding Path=NavigateAbsoluteCommand}" CommandParameter="/Dashboard" />
          <Button Text="Register" Command="{Binding Path=NavigateCommand}" CommandParameter="Register" />
	  </StackLayout>
    

</ContentPage>

